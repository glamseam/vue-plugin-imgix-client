{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "jsx": "preserve",
        "jsxFactory": "h",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "moduleResolution": "node",
        "noErrorTruncation": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "strict": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es2017"
    },
    "exclude": [
        "node_modules",
        "dist",
        "tools"
    ],
    "vueCompilerOptions": {
        "strictTemplates": true
    }
}
